doctype html
html(lang='en')

  head
    include head
    title Sound Ideas: chord player

    script(src='./chord-player/setup.js' defer)
    script(src='./chord-player/keyboard.js' defer)
    script(src='./chord-player/demo.js' defer)
    script(src='https://cdnjs.cloudflare.com/ajax/libs/tone/14.7.77/Tone.js' type='text/javascript') 

    style.
      body{
        margin:0;
        padding:0;
        width:100%;
        height:100%;
        overflow:hidden;
      }
      
      main{
        position:absolute;
        display:block;
        top:0;
        left:0;
        right:0;
        bottom:0;
        margin:auto;
        width:100%;
        height:100%;
      }

      #instrument__chord-player{
        position:absolute;
        display:block;
        top:0;
        left:0;
        right:0;
        bottom:0;
        margin:auto;
        width:100%;
        height:100%;
      }

      #instrument__underlay{
        position:absolute;
        display:block;
        top:0;
        left:0;
        right:0;
        bottom:0;
        margin:auto;
        width:100%;
        height:100%;
        opacity:0;
      }

      #chord-selection{
        width:100%; 
        height:100%; 
        display: block; 
        margin:0; 
        padding:0; 
        position:absolute;
      }

      .chord-selection__button{
        display: block;
        position:absolute;
        font-size: 2vw;
        border: 1px solid #000;
        padding:0;
        margin:0;
        cursor: pointer;
        text-align: center;
        transition:background-color 0.1s ease, color 0.1s ease;
        color:lightgoldenrodyellow;
        background-color:black;
      }

      .chord_selected {   
          background-color:lightgoldenrodyellow;
          color:black;
      }
      
  body(onload='SoundIdeas.loader();assign();')
    main
      #audio_message.audio_message(aria-hidden='true')
      #instrument
        #instrument__underlay
        include chord-player_svg-test
      #chord-selection
        include instrument_setup
      include chord-player_script