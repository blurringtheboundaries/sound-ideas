doctype html
html(lang='en')

  head
    include head.pug
    title Sound Ideas demo site
  body(onload='SoundIdeas.loader()')
    
    header
      include header
    
    main
      h2 Instrument gallery
      section#codes
        // note: include verbosity checkbox to turn on alt text for icons
        // should this be generated by the javascript, since we're already handling the urls?
      
        .qr.blurred(role="link" title="note player")
          a
            img.icon(src="icons/noun-bars-2764469.svg" aria-hidden="true")
            #svg_note-player
            img.logo(src="icons/noun-bars-2764469.svg" aria-hidden="true")
            img.thumbnail.active(src="icons/icon-note-player.svg" alt='a set of buttons labelled with note names')
            .text#note-player__caption Note Player
        .qr.blurred(role="link" title="chord player")
          a
            #svg_chord-player
            img.logo(src="icons/noun-b-chord-5525419.svg" aria-hidden="true")
            img.thumbnail.active(src="icons/icon-chord-player.svg" alt='a set of buttons labelled with chord names alongside colourful strings')
            .text#chord-player__caption Chord Player
        .qr.blurred(role="link" title="faders")
          a
            #svg_faders
            img.logo(src="icons/noun-fader-363408.svg" aria-hidden="true")
            img.thumbnail.active(src="icons/icon-faders.svg" alt='a set of faders on a sound mixer')
            .text#faders__caption Faders
        .qr.blurred(role="link" title="custom instrument")
          a
            #svg_custom
            img.logo(src="icons/noun-settings-1103109.svg" aria-hidden="true")
            img.thumbnail.active(src="icons/icon-custom.svg" alt='sliders and cogs represent a setup screen')
            .text#custom__caption Custom Instrument
        .qr.blurred(role="link" title="chord sequencer")
          a
            #svg_chord-sequencer
            img.logo(src="icons/noun-grid-120268.svg" aria-hidden="true")
            img.thumbnail.active(src="icons/icon-chord-sequencer.svg" alt='a colourful grid with eight rows and six columns')
            .text#custom__caption Chord Sequencer
      h2 Additional examples
      section#embed
        ul
          li
            a(href="embed-demo.html") Chord Player (embedded version)
          li
            a(href="embed-copper.html") Note Player (embedded version)
          li
            a(href="setup.html") Custom instrument setup page

    footer
      include footer
      
