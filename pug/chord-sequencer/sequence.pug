#sequencer 
    //- each row in [5,4,3,2,1,0]
    each row in [0,1,2,3,4,5]
        div(style='display:inline;')
            each col in [0,1,2,3,4,5,6,7]
                div(style='display:inline-block;')
                    input(type="checkbox" id=`check_${row}_${col}` aria-label=`note ${row+1}`).gridBox
                    //- div(style="text-align:center;")= col
            br
        //- input(type="checkbox" id=`check_${val}`)

#sequencer_boxes
    each col in [0,1,2,3,4,5,6,7]
        details.sequenceBeat(id=`gridBox_beat_${col}` aria-label=`beat ${col+1}` role='group' style=`display:block;position:absolute;width:100%;height:100%;background-color:rgba(${col*10},0,0,1);opacity:0;`)
            summary(id=`beat_${col}`)
    
script.
    document.querySelectorAll('.sequenceBeat').forEach(x=>{
        document.body.prepend(x);
        x.innerHTML = x.id.replace('_', ' ')
    });
    document.querySelectorAll('.gridBox').forEach((element=>{
        
        let [y,x] = element.id.split('_').slice(1).map(item=>parseInt(item))
        
        document.getElementById(`gridBox_beat_${x}`).appendChild(element);
        document.getElementById(`gridBox_beat_${x}`).style.visibility='hidden';
        
    }));

